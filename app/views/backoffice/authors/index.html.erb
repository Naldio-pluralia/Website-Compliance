<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Artigos</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class='row'>
        <div class="col-lg-12">
          <p id="notice"><%= notice %></p>
          <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline">
            <thead>
              <tr>
                <th>Name</th>
                <th>Date of birth</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @backoffice_authors.each do |backoffice_author| %>
                <tr>
                  <td><%= backoffice_author.name %></td>
                  <td><%= backoffice_author.date_of_birth %></td>
                  <td><%= backoffice_author.description %></td>
                  <td><%= link_to 'Show', backoffice_author %></td>
                  <td><%= link_to 'Edit', edit_backoffice_author_path(backoffice_author) %></td>
                  <td><%= link_to 'Destroy', backoffice_author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
</table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->