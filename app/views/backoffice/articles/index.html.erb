<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Artigos</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class='row'>
        <div class="col-lg-12">
          <p id="notice"><%= notice %></p>
          <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline">
            <thead>
              <tr>
                <th>Title</th>
                <th>Body</th>
                <th>Published at</th>
                <th>Author</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @backoffice_articles.each do |backoffice_article| %>
                <tr>
                  <td><%= backoffice_article.title %></td>
                  <td><%= backoffice_article.body %></td>
                  <td><%= backoffice_article.published_at %></td>
                  <td><%= backoffice_article.author %></td>
                  <td><%= link_to 'Show', backoffice_article %></td>
                  <td><%= link_to 'Edit', edit_backoffice_article_path(backoffice_article) %></td>
                  <td><%= link_to 'Destroy', backoffice_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->